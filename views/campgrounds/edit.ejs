<% include ../partials/header%>
<div class="container">
     <h1 style="text-align:center;margin: 30px auto">
       Edit <%=campgrounds.name%>
    </h1>
    <form style="width:30%; margin: 30px auto;" action="/campgrounds/<%=campgrounds._id%>?_method=PUT" method="post">
        <div class="form-group">
             <input class="form-control" type="text" name="campgrounds[name]" value="<%=campgrounds.name%>">
        </div>
        <div class="form-group">
             <input class="form-control" type="number" name="campgrounds[price]" value="<%=campgrounds.price%>">
        </div>
         <div class="form-group">
             <input class="form-control" type="text" name="campgrounds[image]" value="<%=campgrounds.image%>">
        </div>
         <div class="form-group">
             <input class="form-control" type="text" name="campgrounds[desc]" value="<%=campgrounds.desc%>">
        </div>
         <div class="form-group">
             <button class="btn btn-lg btn-primary btn-block">
             Submit
             </button>
        </div> 
        <a href="/">Go Back</a>
     </form> 
</div>

<% include ../partials/footer%>