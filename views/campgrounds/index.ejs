<% include ../partials/header%>
<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1>
           Welcome to YelpCamp!
           </h1>
        <p>
            All our hand-picked campgrounds from all over the world!
        </p>
           <a class="btn btn-primary btn-large" href="/campgrounds/new"> Add New Campground</a> 
        </div>        
    </div>
  
    <div class="row">
        <div class="col-lg-12">
            <h4 style="margin: 0 auto 30px auto;">
                Our most popular sites!
            </h4>
       </div>
    </div>  
    <div class="row text-center" style="display:flex;flex-wrap:wrap;">
          <% campgrounds.forEach(function(camp){%>
             <div class="col-md-3 col-sm-6">
                 <div class="card">
                     <img style="height:12rem;" src=<%=camp.image%>>
                     <div class="card-body">
                         <p class="card-text">
                             <%=camp.name%>
                         </p>
                         <a href="/campgrounds/<%=camp._id%>" class="btn btn-info">More Information</a>
                     </div>
                 </div>        
             </div>
       <%})%>
    </div>
</div>

<% include ../partials/footer%>