<% include ../partials/header%>
<div class="container">
     <h1 style="text-align:center;margin: 30px auto">
        Create the new camp
    </h1>
    <form style="width:30%; margin: 30px auto;" action="/campgrounds" method="post">
        <div class="form-group">
             <input class="form-control" type="text" name="name" placeholder="place">
        </div>
        <div class="form-group">
             <input class="form-control" type="number" name="price" placeholder="price" min="0.0" step="0.1"> 
            <!-- step every time add 0.1 -->
        </div>
         <div class="form-group">
             <input class="form-control" type="text" name="image" placeholder="link">
        </div>
         <div class="form-group">
             <input class="form-control" type="text" name="desc" placeholder="description">
        </div>
         <div class="form-group">
             <button class="btn btn-lg btn-primary btn-block">
             Submit
             </button>
        </div> 
        <a href="/">Go Back</a>
     </form> 
</div>

<% include ../partials/footer%>