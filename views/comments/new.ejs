<% include ../partials/header%>
<div class="container">
     <h1 style="text-align:center;margin: 30px auto">
        Add New Comment to <%=campgrounds.name%>
    </h1>
    <form style="width:30%; margin: 30px auto;" action="/campgrounds/<%=campgrounds._id%>/comments" method="post">
         <div class="form-group">
             <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
         <div class="form-group">
             <button class="btn btn-lg btn-primary btn-block">
             Submit
             </button>
        </div> 
        <a href="/">Go Back</a>
     </form> 
</div>

